generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TeamMemberRole {
  OWNER
  MEMBER
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model User {
  id             String        @id @default(uuid())
  email          String        @unique
  hashedPassword String
  firstName      String
  lastName       String
  createdAt      DateTime      @default(now())

  createdTeams   Team[]        @relation("TeamsCreated")
  teamMembers    TeamMember[]
  taskLists      TaskList[]
}

model Team {
  id              String       @id @default(uuid())
  name            String
  description     String
  createdAt       DateTime     @default(now())
  createdByUserId String

  createdByUser   User         @relation("TeamsCreated", fields: [createdByUserId], references: [id], onDelete: Restrict)
  teamMembers     TeamMember[]
  taskLists       TaskList[]
}

model TeamMember {
  id       String          @id @default(uuid())
  teamId   String
  userId   String
  role     TeamMemberRole
  joinedAt DateTime        @default(now())

  team     Team            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

model TaskList {
  id          String   @id @default(uuid())
  name        String
  ownerUserId String?
  teamId      String?
  createdAt   DateTime @default(now())
  archived    Boolean  @default(false)

  ownerUser   User?    @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  team        Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@index([ownerUserId])
  @@index([teamId])
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  priority    TaskPriority
  status      TaskStatus
  listId      String
  createdAt   DateTime     @default(now())
  completedAt DateTime?

  list        TaskList     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId])
}
